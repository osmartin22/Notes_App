<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context="com.ozmar.notes.NoteEditorActivity">

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layoutTitleMarginSides"
        android:layout_marginStart="@dimen/layoutTitleMarginSides"
        android:ems="10"
        android:hint="@string/titleEditText"
        android:imeOptions="flagNoExtractUi"
        android:inputType="textCapSentences|textAutoCorrect|textAutoComplete"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/layoutContentMarginSides"
        android:layout_marginStart="@dimen/layoutContentMarginSides"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="top|start"
        android:hint="@string/editTextNoteHint"
        android:imeOptions="flagNoExtractUi"
        android:inputType="textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTitle"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>
